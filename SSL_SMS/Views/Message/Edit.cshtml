@model SSL_SMS.Models.MessageGroupDto

@{
    ViewBag.Title = "Edit Message Group";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Update Message Group</h2>
<hr />

@Html.ValidationSummary(true, "Please Fixed The Error", new { @class = "text-danger" })

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group row">
        @Html.LabelFor(model => model.GroupName, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.EditorFor(model => model.GroupName, new { htmlAttributes = new { placeholder = "Group Name", @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.GroupName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.Message, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextAreaFor(model => model.Message, new { placeholder = "Enter Message", @class = "form-control", @rows = 3 })
            @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        @Html.HiddenFor(model => model.Create_User)
        @Html.HiddenFor(model => model.Create_Date)
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="submit" value="Update" class="btn btn-primary btn-sm" />
        </div>
    </div>

    <hr />
}

    <div>
        @*@Html.ActionLink("Back to List", "Index", "Message", new { @class = "btn btn-info btn-sm" })*@
        <a class="btn btn-info btn-sm" href="@Url.Action("Index", "Message")">Back to List</a>
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
